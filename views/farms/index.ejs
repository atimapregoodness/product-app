<title>Farms</title>
<% layout('layouts/boilerplate') %>

<nav>
      <div class="logo">
            <h1>My <span>Farm</span></h1>
      </div>
      <div class="links">
            <ol>
                  <li><a href="/home">Home</a></li>
                  <li><a href="/farms" id="activeLink">Farms</a></li>
                  <li><a href="/products">All Products</a></li>
            </ol>
      </div>
</nav>

<div class="container">
      <h1 class="heading">Farms</h1>
      <% if (!farms.length) {%>
            <h1 id="notFound">Empty!!! No farm is added</h1>
      <% } %>
      <div class="farms">
            <% for (let farm of farms){%> 
                  <div class="farm">
                        <h1><%= farm.name %></h1>
                        <div class="describe">
                              <% if (farm.description) {%>
                                    <h2>Description:</h2>
                                    <h3><%= farm.description %></h3>
                              <%} else{%>
                                    <h4>No description!!!</h4>
                              <% } %>
                        </div>
                        <a href="farms/<%=farm._id%>" id="description">view farm</a>
                  </div>
            <%} %>
      </div>
      <a href="farms/add"><button>Add Farm</button></a>
</div>