<title>Add Product_-Products</title>
<% layout('layouts/boilerplate') %>

<nav>
      <div class="logo">
            <h1>My <span>Farm</span></h1>
      </div>
      <div class="links">
            <ol>
                  <li><a href="/home">Home</a></li>
                  <li><a href="/farms" id="activeLink">Farms</a></li>
                  <li><a href="/products">All Products</a></li>
            </ol>
      </div>
</nav>

<div class="formContainer">
      <form action="/farms/<%=farm._id%>/products" method="post" id="formSubmit">
            <h1><%= farm.name %></h1>
            <h2>Add a Product</h2>
            <p>
                  <label for="productName">Product Name</label><br>
                  <input type="text" placeholder="name of your product" id="productName" name="name">
            </p>
            <p>
                  <label for="productPrice">Price $</label><br>
                  <input type="number" placeholder="price of your product" id="productPrice" name="price">
            </p>
            <p>   
                  <label for="category">Product Category</label><br>
                  <select name="category" id="category">
                        <% for (let category of categories){ %>
                              <option value="<%=category %>"><%= category %></option>
                        <% } %>
                  </select>
            </p>
            <button type="submit">Add Product</button>
            <p><a href="/farms/<%= farm._id %>"><<--Back to Farm</a></p>
      </form>
</div>

